CREATE TABLE Funcionarios (
    funcionario_id NUMBER GENERATED BY DEFAULT AS IDENTITY PRIMARY KEY,
    nome VARCHAR2(100) NOT NULL,
    cargo VARCHAR2(50) NOT NULL,
    data_contratacao DATE NOT NULL
);

CREATE TABLE Registros_de_Ponto (
    registro_id NUMBER GENERATED BY DEFAULT AS IDENTITY PRIMARY KEY,
    funcionario_id NUMBER REFERENCES Funcionarios(funcionario_id),
    entrada TIMESTAMP NOT NULL,
    saida TIMESTAMP NOT NULL,
    minutos_atraso NUMBER
);
